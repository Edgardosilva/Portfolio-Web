---
import Layout from '../layouts/Layout.astro';
import Proyectos from '../components/Proyectos.astro';
import Skills from '../components/Skills.astro';
import Contacto from '../components/Contacto.astro';
---

<Layout title="Welcome to Astro.">
  <section class="flex items-center justify-center">
    <article class="w-full flex flex-col">
      <div>
        <div class="relative flex items-center justify-center ">
          <img src="avatarAI.png" alt="Descripción de la imagen" class="w-full mt-10">
          <div class="absolute inset-x-0 top-0 h-28 bg-gradient-to-b from-black to-transparent"></div>
          <div class="absolute inset-x-0 bottom-0 h-28 bg-gradient-to-t from-black to-transparent"></div>
        </div>
        <div class="  w-full h-[280px] flex flex-col justify-around items-center p-5 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#1d3b5c] via-[#080d13] to-[#000000]">
          <h1 class=" text-slate-300 text-[2.8rem] font-bold leading-tight text-center">{'<Edgardo Silva />'}</h1>
          <h3 class="text-slate-400 text-[1.3rem] text-center">Front-end Developer</h3>
          <h3 class="text-slate-400 text-[1.1rem] text-center">Transformando ideas en experiencias digitales únicas e interactivas</h3>
          <button class="bg-cyan-800 text-slate-300 w-[200px] rounded-md text-xl font-bold p-1">Descargar CV</button>
        </div>
      </div>
      <article class="m-4">
        <Proyectos height="500" title="Proyectos"/>
        <Skills title="Skills"/>
        <Contacto title="Contacto"/>
      </article>
    </article>
  </section>
</Layout>


