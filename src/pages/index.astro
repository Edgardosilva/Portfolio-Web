---
import Layout from '../layouts/Layout.astro';
import Proyectos from '../components/Proyectos.astro';
import Skills from '../components/Skills.astro';
---

<Layout title="Welcome to Astro.">
  <section class="flex items-center justify-center">
    <article class="w-full flex flex-col">
      <div class=" p-5 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-[#1d3b5c] via-[#080d13] to-[#000000]">
        <div class="relative flex items-center justify-center rounded-xl">
          <img src="img1.jpg" alt="Descripción de la imagen" class="rounded-xl w-[20rem] mt-6">
        </div>
        <div class="w-full h-[280px] flex flex-col justify-evenly items-center mb-6 ">
          <h1 class=" text-slate-300 text-[2.8rem] font-bold leading-tight text-center">{'<Edgardo Silva />'}</h1>
          <h3 class="text-slate-400 text-[1.3rem] text-center">Front-end Developer</h3>
          <h3 class="text-slate-400 text-[1.1rem] text-center">Transformando ideas en experiencias digitales únicas e interactivas</h3>
          <button class="bg-cyan-800 text-slate-300 w-[200px] rounded-md text-xl font-bold p-1">Descargar CV</button>
        </div>
      </div>
      <article class="m-4">
        <Proyectos height="500" title="Proyectos"/>
        <Skills title="Skills"/>
      </article>
    </article>
  </section>
</Layout>


