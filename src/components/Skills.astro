---
const { t1, t2, t3, t4 } = Astro.props;
---

<section class={`pb-5 mt-5 pt-2 bg-white bg-opacity-5 lg:h-[370px] lg:mt-0 shadow-[4.0px_8.0px_8.0px_rgba(0,0,0,0.25)] flex flex-col w-full rounded-3xl items-center justify-center`}>
    <article class="flex justify-center items-center">
    <div class="flex flex-col items-center">
      <div class=" m-2 border border-gray-700 w-36 h-36 flex items-center justify-center bg-white bg-opacity-5  backdrop-blur-xl shadow-[4.0px_8.0px_8.0px_rgba(0,0,0,0.25)] rounded-xl">
        <img src={t1} class=" w-20 h-20 rounded-xl"/>
      </div>
      <div class=" m-2 border border-gray-700 w-[6rem] h-[6rem] flex items-center justify-center bg-white bg-opacity-5  backdrop-blur-xl shadow-[4.0px_8.0px_8.0px_rgba(0,0,0,0.25)] rounded-xl">
        <img src={t2} class=" w-[3.5rem]  h-[3.5rem] rounded-xl" />
      </div>
    </div>
    <div class="flex flex-col items-center">
      <div class=" m-2 border border-gray-700 w-28 h-28 flex items-center justify-center bg-white bg-opacity-5  backdrop-blur-xl shadow-[4.0px_8.0px_8.0px_rgba(0,0,0,0.25)] rounded-xl">
        <img src={t3} class=" w-16 h-16 rounded-xl"/>
      </div>
      <div class=" m-2 border border-gray-700 w-32 h-32 flex items-center justify-center bg-white bg-opacity-5  backdrop-blur-xl shadow-[4.0px_8.0px_8.0px_rgba(0,0,0,0.25)] rounded-xl">
        <img src={t4} class=" w-16  h-16 rounded-xl"/>
      </div>      
    </div>
  </article>
</section>

